<% @products.each do |product|%>

	<tr>


		<td><%= product.name%> 
			<!-- jika ada user yang cari makanan dengan nama makanan seperti xxx -->
			<!-- maka tampilkan besserta nama restaurant nya -->

		 <%if params[:name]%>
		 <span><%link_to product.restaurant.name, restaurant_path(product.restaurant)%></span>
		 	<!-- Jika restaurant ada gambarnya, tampilkan juga -->
		 <%if product.restaurant.image.present?%>
		 	<span><%= image_tag product.restaurant.image_url%></span>
		 	<%end%>
		 <%end%>
		</td>



		<td><%= link_to 'Show', product,class:"btn btn-default  btn-inverse", style:'width:80px'%>

				<%if user_signed_in? && current_user.is_admin?%>

				<%= link_to 'Edit', edit_product_path(product),class:"btn btn-default  btn-inverse", style:'width:80px;margin-left: 15px;
					margin-right: 15px;'%>
				<%= link_to 'Destroy', product,class:"btn btn-default  btn-inverse", style:'width:80px', method: :delete, data: {confirm: 'Are you sure?'} %>
				<%end%>

		</td>

	</tr>

	<%end%>
