<p id="notice"> <%= notice %></p>

<div class='row-fluid'>
	<div class='span12' style='margin-top:20px;'>
		<%= image_tag @product.image_url, class: 'img-polaroid', style:'width:200px; float:left; margin-right:20px;' %>


	</div>

</div>


<p>
	<b>Name : </b>
	<%= @product.name%>

</p>

<p>
	<b>Quantity : </b>
	<%= @product.quantity%>

</p>

<p>
	<b>Price : </b>
	<%= @product.price%>

</p>

<p>
	<b>Restaurant : </b>
	<%= link_to @product.restaurant.name, restaurant_path(@product.restaurant)%>

</p>


<div style='margin-top:25px;'>
	<%if user_signed_in?  %>
<div style='width:80px;margin-right: 25px;float:left;'>
<%= link_to 'Edit', edit_product_path(@product),class:"btn btn-default btn-block btn-inverse",style:'color:white;'%> 
</div>
	<%end%>
<div style='width:80px;margin-right: 25px;float:left;'>
<%= link_to 'Back', products_path(@product),class:"btn btn-default btn-block btn-inverse", style:'color:white;'%>
</div>
  				<div>
              <%= link_to 'Add to cart', '#', class: 'btn btn-default btn-primary add-to-cart',
                  data: { id: @product.id, name: @product.name, 
                    price: @product.price, currency: number_to_currency(@product.price, unit: 'Rp.', delimiter: '.', precision: 0) }
              %>
  				</div>
</div>

